{
    "app-id": "io.github.BuddySirJava.SSH-Studio",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "command": "ssh-studio",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=network",
        "--filesystem=~/.ssh:rw",
        "--socket=ssh-auth",
        "--env=GTK_ICON_THEME=Adwaita"
    ],
    "modules": [
      {
        "name": "blueprint-compiler",
        "buildsystem": "meson",
        "config-opts": ["--prefix=/app"],
        "sources": [
          {
            "type": "git",
            "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
            "tag": "v0.18.0"
          }
        ]
      },
      {
        "name": "ssh-studio",
        "buildsystem": "meson",
        "post-install": [
          "printf '#!/usr/bin/env bash\\nexec python3 -m ssh_studio.main \"$@\"\\n' > /app/bin/ssh-studio",
          "chmod +x /app/bin/ssh-studio"
        ],
        "sources": [
          {
            "type": "git",
            "url": "https://github.com/BuddySirJava/SSH-Studio.git",
            "tag": "v1.2.1"
          }
        ],
        "cleanup": [
          "/include",
          "/lib/pkgconfig",
          "/share/man",
          "/share/pkgconfig",
          "/share/gtk-doc",
          "/share/doc",
          "/share/devhelp",
          "*.la",
          "*.a"
        ]
      }
    ]
  }