{
    "app-id": "io.github.BuddySirJava.SSH-Studio",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "command": "ssh-studio",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=network",
        "--filesystem=~/.ssh:rw",
        "--socket=ssh-auth",
        "--env=GTK_ICON_THEME=Adwaita"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/man",
        "/share/pkgconfig",
        "/share/gtk-doc",
        "/share/doc",
        "/share/devhelp",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "config-opts": [
                "--prefix=/app"
            ],
            "cleanup": ["*"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/blueprint-compiler.git",
                    "tag": "v0.18.0"
                }
            ],
            "x-checker-data": {
                "type": "git",
                "url": "https://gitlab.gnome.org/GNOME/blueprint-compiler.git",
                "tag-pattern": "^v([\\d.]+)$"
            }
        },
        {
            "name": "ssh-studio",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/BuddySirJava/SSH-Studio.git",
                    "tag": "v1.2.1"
                }
            ],
            "x-checker-data": {
                "type": "git",
                "url": "https://github.com/BuddySirJava/SSH-Studio.git",
                "tag-pattern": "^v([\\d.]+)$"
            }
        }
    ]
}